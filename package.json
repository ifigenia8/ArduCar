{
	"name": "arducar",
	"version": "0.1.0",
	"private": true,
	"main": "public/electron.js",
	"author": "Ifigenia Garofalaki",
	"homepage": "./",
	"dependencies": {
		"@testing-library/jest-dom": "^4.2.4",
		"@testing-library/react": "^9.3.2",
		"@testing-library/user-event": "^7.1.2",
		"blockly": "^3.20200123.1",
		"electron-is-dev": "^1.1.0",
		"etherport-client": "^0.1.4",
		"johnny-five": "^1.4.0",
		"react": "^16.13.0",
		"react-dom": "^16.13.0",
		"react-scripts": "3.4.0"
	},
	"devDependencies": {
		"concurrently": "^5.1.0",
		"electron": "^8.0.3",
		"electron-builder": "^22.3.6",
		"electron-rebuild": "^1.10.0",
		"wait-on": "^4.0.1"
	},
	"scripts": {
		"react-start": "react-scripts start",
		"react-build": "react-scripts build",
		"test": "react-scripts test",
		"eject": "react-scripts eject",
    "dev": "concurrently \"yarn react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "yarn react-build && yarn electron-builder",
    "rebuild": "yarn electron-rebuild --force",
    "postinstall": "yarn rebuild && electron-builder install-app-deps"
	},
	"build": {
    "productName": "ArduCar",
    "appId": "com.arducar",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories":{
      "buildResources": "assets"
    },
		"dmg": {
			"contents": [
				{
					"x": 130,
					"y": 220
				},
				{
					"x": 410,
					"y": 220,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"win": {
			"target": [
        "nsis"
			]
		},
		"linux": {
			"target": [
				"deb",
				"AppImage"
			],
			"category": "Utility"
		}
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"browserslist": {
		"production": [ ">0.2%", "not dead", "not op_mini all" ],
		"development": [ "last 1 chrome version", "last 1 firefox version", "last 1 safari version" ]
	}
}
